# Pooled connection for application queries (use -pooler endpoint for Neon)
DATABASE_URL="postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require"

# Direct connection for migrations (without -pooler, required for Prisma migrations)
DIRECT_DATABASE_URL="postgresql://user:password@host.region.aws.neon.tech/database?sslmode=require"
NEXTAUTH_URL="https://yourdomain.vercel.app"
NEXTAUTH_SECRET="generate-a-secret-here"
NEXT_PUBLIC_API_URL="https://yourdomain.vercel.app"

# WebSocket Server URL (for client-side connection)
# Local development: http://localhost:3001
# Production: https://your-websocket-server.railway.app or https://your-websocket-server.onrender.com
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"